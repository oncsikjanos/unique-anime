{
	"name": "Unique Anime Development Container",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.12"
		},
		"ghcr.io/devcontainers/features/node:1": {}
	},
	"forwardPorts": [4200],
	"postCreateCommand": "cd frontend && npm install . && cd .. && pip install -r fetch/requirements.txt",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"angular.ng-template",
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode"
			]
		}
	},
	"remoteUser": "vscode"
}